<Window x:Class="ToDoGUI.InitialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InitialWindow" Height="300" Width="300"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height=".2*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Ви таки запустили нашу пr'огr'амму, добr'о пожаловать" Margin="5" Padding="5" TextWrapping="Wrap" 
                   TextAlignment="Center" Grid.ColumnSpan="2"  />
        
        <TextBlock Text="Куда ви таки хотите подключиться?" Grid.Column="0" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Center" /> 
        <TextBox Text="{Binding Path=Addr}"  Grid.Column="1" Grid.Row="2" />
        <Button Content="Ок" Padding="5" Margin="5" Grid.Row="4" Grid.Column="0"  Click="OkButton_Click"/>
        <Button Content="Сancel" Padding="5" Margin="5" Grid.Row="4" Grid.Column="2" x:Name="CancelButton" Click="CancelButton_Click"  />
    </Grid>
</Window>
